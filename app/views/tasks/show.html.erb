<h1><%= @task.title %></h1>

<p><%= @task.details %></p>
<p>
  <% if @task.completed == false %>
    <%= "This task is not completed yet" %>
  <% else %>
    <%= "This task is completed" %>
  <% end %>
</p>
<%= link_to "Delete task",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
<p><%= link_to "Edit task", edit_task_path(@task) %></p>
<p><%= link_to 'Back to list', tasks_path %></p>
